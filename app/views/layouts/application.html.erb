<!DOCTYPE html>
<html>
  <head>
    <title>Gym Management</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Gym Management</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Members', members_path, class: "nav-link #{'active' if request.path == members_path}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Trainers', trainers_path, class: "nav-link #{'active' if request.path == trainers_path}" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Gym Classes', gym_classes_path, class: "nav-link #{'active' if request.path == gym_classes_path}" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
      <%= yield %>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
      <p>&copy; <%= Time.now.year %> Gym Management. All rights reserved.</p>
    </footer>
  </body>
</html>
